{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2019",
    "outDir": ".build",
    "skipLibCheck": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    // "noImplicitAny": false, // disallow implicit any type,
  },
  "include": ["./src/**/*"]
}